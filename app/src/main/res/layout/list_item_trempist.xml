<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/edit_text_bg">

    <ImageView
        android:id="@+id/user_im_trempist"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:foregroundGravity="center"
        android:src="@drawable/user_icon" />

    <TextView
        android:id="@+id/ride_details_trempist"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/user_im_trempist"
        android:layout_toRightOf="@+id/user_im_trempist"
        android:textColor="@color/black" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/cancel_ride_trempist"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="260dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/rate_ride"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/cancel_ride_trempist"
        android:layout_marginLeft="2dp"
        android:layout_toEndOf="@id/spinner1"
        android:layout_toRightOf="@+id/spinner1"
        android:text="דרג"
        android:textSize="12dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancel_ride_trempist"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_im_trempist"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="9dp"
        android:layout_toEndOf="@id/ride_details_trempist"
        android:layout_toRightOf="@id/ride_details_trempist"
        android:text="בטל הצטרפות"
        android:textSize="12dp" />


</RelativeLayout>