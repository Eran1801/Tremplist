<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/edit_text_ubg">

    <ImageView
        android:id="@+id/user_im_Mytrempist"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:foregroundGravity="center"
        android:src="@drawable/user_icon" />

    <TextView
        android:id="@+id/my_passanger_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/user_im_Mytrempist"
        android:layout_toRightOf="@+id/user_im_Mytrempist"
        android:textColor="@color/black" />

    <ImageButton
        android:id="@+id/call_MyPassenger"
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_passanger_details"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="236dp"
        android:layout_marginLeft="236dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="-3dp"
        android:layout_toEndOf="@id/whatsapp_MyPassenger"
        android:layout_toRightOf="@id/whatsapp_MyPassenger"
        android:foregroundGravity="center"
        android:padding="7dp"
        android:src="@drawable/cell" />

    <ImageButton
        android:id="@+id/whatsapp_MyPassenger"
        android:layout_width="36dp"
        android:layout_height="32dp"
        android:layout_below="@id/my_passanger_details"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="199dp"
        android:layout_marginLeft="199dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@id/my_passanger_details"
        android:layout_toRightOf="@id/my_passanger_details"
        android:foregroundGravity="center"
        android:src="@mipmap/ic_whatsapp2" />


</RelativeLayout>