<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.myapp.tremplist_update">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/tremplist_logo"
        android:label="TrempList"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tremplist_update">

        <activity
            android:name=".UI.PersonalUserInfoActivity"
            android:exported="true"
            android:label="update details"
            android:launchMode="singleTop"
            android:parentActivityName=".UI.MainActivity" />

        <activity
            android:name=".UI.PopUpWindow"
            android:theme="@style/AppTheme.popMe"
            android:exported="false"/>

        <activity
            android:name=".UI.DriverFirstPage"
            android:exported="true"
            android:label="Driver Page"
            android:launchMode="singleTop"
            android:parentActivityName=".UI.MainActivity" />
        <activity
            android:name=".UI.Publish_activity"
            android:exported="true"
            android:label="Publish ride"
            android:launchMode="singleTop"
            android:parentActivityName=".UI.DriverFirstPage" />
        <activity
            android:name=".UI.My_rides_Driver_Activity"
            android:exported="true"
            android:label="My rides"
            android:launchMode="singleTop"
            android:parentActivityName=".UI.DriverFirstPage" />
            android:parentActivityName=".UI.DriverFirstPage"/>

        <activity
            android:name=".UI.My_requests_Activity"
            android:launchMode="singleTop"
            android:exported="true"
            android:label="My rides"
            android:parentActivityName=".UI.PassengerFirstPage"/>

        <activity
            android:name=".UI.driver_waiting_listActivity"
            android:exported="true"
            android:label="My rides"
            android:launchMode="singleTop"
            android:parentActivityName=".UI.DriverFirstPage" />
        <activity
            android:name=".UI.My_rides_Passenger_Activity"
            android:exported="true"
            android:label="My rides"
            android:launchMode="singleTop"
            android:parentActivityName=".UI.PassengerFirstPage" />
        <activity
            android:name=".UI.PassengerFirstPage"
            android:exported="true"
            android:label="Passenger Page"
            android:launchMode="singleTop"
            android:parentActivityName=".UI.MainActivity" />
        <activity
            android:name=".UI.Search_ridesActivity"
            android:exported="true"
            android:label="Search ride"
            android:launchMode="singleTop"
            android:parentActivityName=".UI.PassengerFirstPage" />
        <activity
            android:name=".UI.show_search_resultsActivity"
            android:exported="true"
            android:label="Rides"
            android:launchMode="singleTop"
            android:parentActivityName=".UI.Search_ridesActivity" />

        <service
            android:name=".fireBase.FirebaseMessagingService"
            android:exported="false"
            android:permission="TODO"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".UI.LoginActivity" />
        <activity android:name=".UI.ForgotPasswordActivity" />
        <activity android:name=".UI.RegisterActivity" />
        <activity android:name=".UI.MainActivity" />
        <activity
            android:name=".UI.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>